{
  "name": "blue-planet",
  "title": "Blue Planet",
  "version": "3.9.2",
  "license": "GPL-2.0+",
  "repository": "github:ernilambar/blue-planet",
  "scripts": {
    "dev": "gulp",
    "build": "gulp build",
    "version": "grunt version",
    "pot": "npm run textdomain && npm run language",
    "language": "wpi18n makepot --domain-path=languages --exclude=vendor,deploy,node_modules",
    "textdomain": "wpi18n addtextdomain --exclude=vendor,deploy,node_modules",
    "deploy": "shx rm -rf deploy/ && shx mkdir deploy && copy-files-from-to --config .copyfiles.json && cd deploy/ && shx mv temp $npm_package_name && bestzip ../$npm_package_name.zip * && cd .. && shx mv $npm_package_name.zip deploy/"
  },
  "devDependencies": {
    "bestzip": "^2.2.1",
    "browser-sync": "^2.27.10",
    "copy-files-from-to": "^3.2.2",
    "del": "^6.1.1",
    "dotenv": "^16.0.1",
    "grunt": "^1.5.3",
    "grunt-replace": "^2.0.2",
    "gulp": "^4.0.2",
    "gulp-jshint": "^2.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^2.0.0",
    "gulp-run": "^1.7.1",
    "gulp-uglify": "^3.0.2",
    "jshint": "^2.13.4",
    "node-wp-i18n": "^1.2.6",
    "shx": "^0.3.4"
  }
}
